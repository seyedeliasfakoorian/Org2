{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits"],
  
  "automerge": false,
  "commitMessageTopic": "references to {{{depName}}}",
  "semanticCommitType": "docs",
  "semanticCommitScope": null,
  "additionalBranchPrefix": "docs-",
  "minimumReleaseAge": null,
  "separateMajorMinor": false,
  
  "autodiscover": true,
  "autodiscoverFilter": ".github/renovate.json",

  "ignorePaths": [
    ".github/workflows/Org2.yml",
    "dependabot.yml",
    "index.php"
  ],

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false
    }
  ],

  "reviewers": ["seyedeliasfakoorian"],

  "token": "${GITHUB_TOKEN}",
  "npmToken": "${NPM_ACCESS_TOKEN}",
  
  "npmrc": {
    "write": {
      "//registry.npmjs.org/:_authToken": "${NPM_AUTH_TOKEN}"
    }
  },
  
  "gitAuthor": "${GITHUB_ACTOR}@users.noreply.github.com",
  
  "logLevel": "debug",
  "platform": "github"
}
